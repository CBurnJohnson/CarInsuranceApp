@using CarinsuranceApp.Models
@model List<QuoteInfo>
@{
    ViewBag.Title = "Admin";
}

<div class="row no-gutters m-3 text-white">
    <div class="card col-sm-12 col-md-10 col-lg-6 mx-auto shadow">
        <div class="card-header text-center">
            <h5 class="m-0">Issued Quotes</h5>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col">
                    <p><u>First Name</u></p>
                </div>
                <div class="col">
                    <p><u>Last Name</u></p>
                </div>
                <div class="col">
                    <p><u>Email Address</u></p>
                </div>
                <div class="col">
                    <p><u>Quote Amount</u></p>
                </div>

            </div>
           @foreach (var quote in Model)
           {
               <input type="hidden" name="Id" value="@quote.Id" />
               <div class="row mb-3">
                   <div class="col-3">
                       @quote.FirstName
                   </div>
                   <div class="col-3">
                       @quote.LastName
                   </div>
                   <div class="col-4">
                       @quote.EmailAddress
                   </div>
                   <div class="col-2">
                       $ @quote.Quote
                   </div>
               </div>
               
           }
        </div>
    </div>
</div>
     

